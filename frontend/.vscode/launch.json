{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "Chrome incognito nuxt",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}",
            "runtimeArgs": [
                "--incognito"
            ],
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Chrome nuxt",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}",
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Nuxt Server",
            "args": [
                "dev"
            ],
            "outputCapture": "std",
            "linux": {
                "program": "${workspaceFolder}/node_modules/.bin/nuxt"
            },
            "windows": {
                "program": "${workspaceFolder}/node_modules/nuxt/bin/nuxt.js"
            },
            "env": {
                "API_URL": "https://api.reims2.duckdns.org/pvh/api/" // for AXIOS
            }
        }
    ],
    "compounds": [
        {
            "name": "Nuxt Server+Client",
            "configurations": [
                "Nuxt Server",
                "Chrome nuxt"
            ]
        }
    ]
}