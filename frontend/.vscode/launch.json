{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "chrome",
      "request": "launch",
      "name": "Chrome nuxt",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Vite Dev (remote API)",
      "args": ["dev:remote"],
      "outputCapture": "std",
      "linux": {
        "program": "${workspaceFolder}/node_modules/.bin/vite"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Vite Dev (local API)",
      "args": ["dev:local"],
      "outputCapture": "std",
      "linux": {
        "program": "${workspaceFolder}/node_modules/.bin/vite"
      }
    }
  ]
}
