{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:js-app",
    "npm:unpublishSafe",
    ":dependencyDashboard",
    ":prHourlyLimitNone",
    ":separateMajorReleases",
    "helpers:pinGitHubActionDigests",
    "schedule:weekends",
    ":automergePatch",
    ":automergeLinters",
    ":automergeTesters",
    ":automergeTypes",
    ":automergePr"
  ],
  "platformAutomerge": true,
  "packageRules": [
    {
      "matchPackageNames": [
        "vue",
        "nuxt",
        "webpack",
        "nuxt-route-meta",
        "ts-loader"
      ],
      "matchUpdateTypes": ["major"],
      "enabled": false
    },
    {
      "matchDepTypes": ["devDependencies"],
      "matchUpdateTypes": ["minor", "patch"],
      "matchCurrentVersion": "!/^0/",
      "automerge": true
    }
  ]
}
