{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "npm:unpublishSafe",
    ":dependencyDashboard",
    ":prHourlyLimitNone",
    ":separateMajorReleases",
    "helpers:pinGitHubActionDigests",
    "docker:pinDigests",
    ":automergePatch",
    ":automergeLinters",
    ":automergeTesters",
    ":automergeTypes",
    ":automergeDigest",
    ":automergePr",
    ":prConcurrentLimit20",
    "group:test",
    "group:linters",
    "group:definitelyTyped",
    "group:allDigest",
    "group:vite",
    "schedule:automergeWeekends"
  ],
  "configMigration": true,
  "labels": [
    "dependencies"
  ],
  "platformAutomerge": true,
  "packageRules": [
    {
      "matchDepTypes": [
        "devDependencies"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "matchCurrentVersion": "!/^0/",
      "automerge": true
    },
    {
      "matchPackageNames": [
        "playwright",
        "@playwright/test",
        "mcr.microsoft.com/playwright"
      ],
      "matchDatasources": [
        "docker",
        "npm"
      ],
      "groupName": "playwright monorepo",
      "matchUpdateTypes": [
        "digest",
        "patch",
        "minor",
        "major"
      ]
    },
    {
      "extends": [
        "packages:test",
        "packages:linters",
        "schedule:monthly"
      ]
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "^Dockerfile$",
        "^.github/.+/*\\.ya?ml$",
        "defaults/main.ya?ml$"
      ],
      "matchStrings": [
        "renovate:? datasource=(?<datasource>.*?) depName=(?<depName>.*?)( versioning=(?<versioning>.*?))?\\s.*?_(?:VERSION|version)=(?<currentValue>.*)\\s"
      ],
      "versioningTemplate": "{{#if versioning}}{{{versioning}}}{{else}}semver{{/if}}"
    }
  ],
  "schedule": [
    "before 2pm on Saturday"
  ],
  "timezone": "Europe/Berlin",
  "npm": {
    "extends": [
      ":pinAllExceptPeerDependencies"
    ]
  }
}
