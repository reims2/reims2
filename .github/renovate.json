{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "npm:unpublishSafe",
    ":dependencyDashboard",
    ":prHourlyLimitNone",
    ":separateMajorReleases",
    "helpers:pinGitHubActionDigests",
    "docker:pinDigests",
    ":automergeLinters",
    ":automergeTesters",
    ":automergeTypes",
    ":automergePr",
    ":prConcurrentLimit10",
    "group:test",
    "group:linters",
    "group:definitelyTyped",
    "schedule:automergeWeekends"
  ],
  "configMigration": true,
  "labels": ["dependencies"],
  "platformAutomerge": true,
  "packageRules": [
    {
      "groupName": "all patch dependencies",
      "matchPackageNames": ["!vuetify"],
      "matchUpdateTypes": ["patch", "digest"],
      "automerge": true
    },
    {
      "groupName": "all dev dependencies",
      "matchDepTypes": ["devDependencies", "action", "galaxy-collection"],
      "matchUpdateTypes": ["minor", "patch", "digest"],
      "automerge": true
    },
    {
      "matchPackageNames": [
        "playwright",
        "@playwright/test",
        "mcr.microsoft.com/playwright"
      ],
      "matchDatasources": ["docker", "npm"],
      "groupName": "playwright monorepo",
      "matchUpdateTypes": ["minor", "major"]
    },
    {
      "extends": ["packages:test", "packages:linters", "schedule:monthly"]
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "^Dockerfile$",
        "^.github/.+/*\\.ya?ml$",
        "defaults/main.ya?ml$"
      ],
      "matchStrings": [
        "renovate:? datasource=(?<datasource>.*?) depName=(?<depName>.*?)( versioning=(?<versioning>.*?))?\\s.*?_(?:VERSION|version)=(?<currentValue>.*)\\s"
      ],
      "versioningTemplate": "{{#if versioning}}{{{versioning}}}{{else}}semver{{/if}}"
    }
  ],
  "ansible": {
    "fileMatch": [
      "(^|/)tasks/[^/]+\\.ya?ml$",
      "docker-compose\\.ya?ml(\\.j2)?$"
    ]
  },
  "ignoreDeps": [
    "reims2/reims2-frontend",
    "reims2/reims2-backend",
    "reims2/reims2-docs",
    "reims2/reims2"
  ],
  "schedule": ["before 2pm on Saturday"],
  "timezone": "Europe/Berlin",
  "npm": {
    "extends": [":pinAllExceptPeerDependencies"]
  }
}
